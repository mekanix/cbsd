#!/usr/local/bin/cbsd
# dialog_menu_main
#
# Display the dialog(1)-based application main menu.
#
dialog_menu_main()
{
	local title="$DIALOG_TITLE"
	local btitle="$DIALOG_BACKTITLE"
	local prompt=" Virtual Machine: ${jname} "
	local menu_list="
		'A ${msg_add_new_nvme}'	'${msg_add_new_nvme_desc}'	'Add and configure new NVMe controller'
		'-'	'-'	''
	" # END-QUOTE
	local defaultitem=
	local hline="${hline_arrows_tab_enter}"

	local n=1

	for last_nvme in $( /usr/bin/seq 1 16 ); do
		unset id devpath ram maxq qsz ioslots sectsz ser
		eval id="\$nvme_id$last_nvme"
		[ -z "${id}" ] && break
		eval nvme_devpath="\$nvme_devpath$last_nvme"
		eval nvme_ram="\$nvme_ram$last_nvme"
		eval nvme_maxq="\$nvme_maxq$last_nvme"
		eval nvme_qsz="\$nvme_qsz$last_nvme"
		eval nvme_ioslots="\$nvme_ioslots$last_nvme"
		eval nvme_sectsz="\$nvme_sectsz$last_nvme"
		eval nvme_ser="\$nvme_ser$last_nvme"

		menu_list="${menu_list} '${n} ${nvme_devpath}'	'${nvme_devpath}'	'ram:${nvme_ram},maxq=${nvme_maxq},qsz=${nvme_qsz},ioslots=${nvme_ioslots},sectsz=${nvme_sectsz},ser=${nvme_ser}'"
		n=$(( $n + 1 ))
	done

	local height width rows
	eval f_dialog_menu_with_help_size height width rows \
		\"\$title\"  \
		\"\$btitle\" \
		\"\$prompt\" \
		\"\$hline\"  \
		$menu_list

	# Obtain default-item from previously stored selection
	f_dialog_default_fetch defaultitem

	local menu_choice
	menu_choice=$( eval $DIALOG \
		--clear                                 \
		--title \"\$title\"                     \
		--backtitle \"\$btitle\"                \
		--hline \"\$hline\"                     \
		--item-help                             \
		--ok-label \"\$msg_ok\"                 \
		--cancel-label \"Exit\"                 \
		${cbsd_help}                            \
		${USE_XDIALOG:+--help \"\"}             \
		--default-item \"\$defaultitem\"        \
		--menu \"\$prompt\"                     \
		$height $width $rows                    \
		$menu_list                              \
		2>&1 >&$DIALOG_TERMINAL_PASSTHRU_FD
	)

	local retval=$?
	f_dialog_data_sanitize menu_choice
	f_dialog_menutag_store "$menu_choice"

	# Only update default-item on success
	[ $retval -eq $DIALOG_OK ] && f_dialog_default_store "$menu_choice"
	return $retval
}

find_first_free_nvme_id()
{
	local last_nvme _res

	last_nvme=$( cbsdsql ${jailsysdir}/${jname}/local.sqlite 'SELECT COUNT(id) FROM bhyve_nvme' )
	[ -z "${last_nvme}" ] && last_nvme="0"
	last_nvme=$(( last_nvme + 1 ))
	echo "${last_nvme}"
}

############################################################ MAIN
export NOCOLOR=1

MYARG="jname"
MYOPTARG=""
MYDESC="Bhyve constroller dialog"
CBSDMODULE="bhyve"

globalconf="${workdir}/cbsd.conf";

set -e
. ${globalconf}
set +e

. ${subr}
. ${strings}
. ${tools}
init $*

. ${workdir}/bsdconfig.subr
f_include_lang $BSDCFG_LIBE/$APP_DIR/include/messages-bhyve-nvme.subr

. ${jrcconf}
[ $? -eq 1 ] && err 1 "${MAGENTA}No such VM: ${GREEN}${jname}${NORMAL}"
[ "${emulator}" != "bhyve" ] && err 1 "${MAGENTA}Not in bhyve mode${NORMAL}"

. $BSDCFG_LIBE/$APP_DIR/include/bhyve-nvme.subr

# Incorporate rc-file if it exists
[ -f "$HOME/.bsdconfigrc" ] && f_include "$HOME/.bsdconfigrc"

#
# Process command-line arguments
#
while getopts h$GETOPTS_STDARGS flag; do
	case "$flag" in
	h|\?) f_usage $BSDCFG_LIBE/$APP_DIR/USAGE "PROGRAM_NAME" "$pgm" ;;
	esac
done
shift $(( $OPTIND - 1 ))

#
# Initialize
#
f_dialog_title " $msg_configure_bhyve_nvme "
f_dialog_backtitle "${ipgm:+bsdconfig }$pgm"
f_mustberoot_init

#
# Loop over the main menu until we've accomplished what we came here to do
#
while :; do
	load_nvme_info
	dialog_menu_main || break
	f_dialog_menutag_fetch mtag

	[ -z "${mtag}" ] && exit $SUCCESS

	command=

	case "$mtag" in
		?" $msg_exit") break ;;
		?" $msg_add_new_nvme")
			last_nvme=$( find_first_free_nvme_id )
			nvme="nvme${last_nvme}"
			command="bhyve-new-nvme jname=${jname} nvme=${nvme}"
			;;
		*)
			[ "${mtag}" = "-" ] && continue
			index=${mtag%% *}
			nvme=${mtag##* }
			command="bhyve-cfg-nvme jname=${jname} nvme=${nvme}"
			;;
	esac

	if [ "${command}" ]; then
		$BSDCFG_LIBE/$APP_DIR/$command ${USE_XDIALOG:+-X}
	fi

done

return $SUCCESS

################################################################################
# END
################################################################################
