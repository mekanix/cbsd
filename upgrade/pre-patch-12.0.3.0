#!/bin/sh
#v12.0.3
# Update settings tables for cd_boot_firmware column
: ${distdir="/usr/local/cbsd"}
unset workdir

# MAIN
[ -z "${cbsd_workdir}" ] && . /etc/rc.conf
[ -z "${cbsd_workdir}" ] && exit

workdir="${cbsd_workdir}"

[ ! -f "${distdir}/cbsd.conf" ] && exit

. ${distdir}/cbsd.conf
. ${distdir}/tools.subr
test_sql_stuff

[ ! -h "${dbdir}/local.sqlite" ] && exit

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter cd_boot_firmware if not exist
	unset _test
	_test=$( ${miscdir}/sqlcli ${mydb} "SELECT cd_boot_firmware FROM settings LIMIT 1" )
	[ -n "${_test}" ] && continue
	${ECHO} "  * ${N1_COLOR}Update settings tables: cd_boot_firmware for ${N2_COLOR}${i}${N0_COLOR}"
	${miscdir}/sqlcli ${mydb} ALTER TABLE settings ADD COLUMN cd_boot_firmware text default "bhyve"
done
