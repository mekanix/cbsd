#!/usr/local/bin/cbsd
#v11.0.10
CBSDMODULE="jail"
MYARG="jname"
MYOPTARG=""
MYDESC="Dialog based UI for RACCR/RCTL"

. ${subr}
. ${tools}

[ -z "${1}" ] && select_jail_by_list -s "List of local VMs:" -r 0 -e bls
init $*

. ${jrcconf}
[ $? -eq 1 ] && err 1 "${MAGENTA}No such bhyve: ${GREEN}${jname}${NORMAL}"

forms module=brctl jname=${jname} updcol=cur
