#!/usr/local/bin/cbsd
#v11.0.10
MYARG=""
MYOPTARG="jname"
MYDESC="Return jail ID in output and jail existance as error code (0: no jail, 1: jail exist)"
CBSDMODULE="jail"

. ${subr}
. ${strings}

. ${cbsdinit}

[ -z "${jname}" ] && jname=$1
[ -z "${jname}" ] && exit 0

. ${jrcconf}
[ $? -eq 1 ] && exit 0

# jail exist
echo "${myjid}"

exit 1
