#!/usr/local/bin/cbsd
#v10.0.5
CBSDMODULE="jail"
MYARG="jname"

unset jname

. ${subr}
. ${strings}

[ -f ${distsharedir}/jail-arg ] || err 1 "no jail-arg file";
. ${distsharedir}/jail-arg

MYOPTARG="$JARG mode"
#mode=quiet
MYDESC="Get info related to jail"
ADDHELP="mode=quiet - return only value, without other string\n"
. ${cbsdinit}

[ -z "${jname}" ] && err 1 "Give me jname"
. ${jrcconf}
[ $? -eq 1 ] && err 1 "${N1_COLOR}No such jail: ${N2_COLOR}${jname}${N0_COLOR}"
QUIET=0
[ "${mode}" = "quiet" ] && QUIET=1

shift
ARGS=${@}

[ $baserw -eq 1 ] && path="${data}"

for OID in ${ARGS}; do
	for _jarg in ${JARG}; do
		case ${OID} in
			"${_jarg}")
				eval val=\"\$${_jarg}\"
				if [ $QUIET -eq 1 ]; then
					echo "${val}"
				else
					echo "${OID}: ${val}"
				fi
				break
				;;
			"${ST}")
				if [ $QUIET -eq 1 ]; then
					echo "${ST}"
				else
					echo "${OID}: ${ST}"
				fi
				break
				;;
		esac
	done
done
